%link{:crossorigin => "anonymous", :href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", :integrity => "sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", :rel => "stylesheet"}/

.container
  .jumbotron
    %h2= "#{@athlete.name}'s Workouts"
    -@athlete.workouts.each do |workout|
      %br/
      = "Duration: #{workout.time}"
      %br/
      = "Distance: #{workout.distance} miles"
      %br/
      -# = image_tag @athlete.image_path

%nav.navbar.navbar-default.navbar-bottom
  .container
    %br/
    = link_to "Create Athlete", new_athlete_path
    %br/
    = link_to "Athletes Homepage", athletes_path
    %br/
    = link_to "Back to Athlete Profile", athlete_path(@athlete)

